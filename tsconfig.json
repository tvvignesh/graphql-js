{
  "compilerOptions": {
    "target": "ES2019",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": false,
    "outDir": "dist",
    "rootDir": "src",
    "typeRoots": ["../node_modules/@types", "./@types"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}